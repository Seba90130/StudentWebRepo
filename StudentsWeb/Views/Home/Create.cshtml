@model StudentsWeb.Models.Student

@{
    ViewData["Title"] = "Create new Student";
}

<h1 class="text-center">STUDENTS CRUD</h1>

<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Create a new Student</strong></h3>
            </div>
             <div class="card-body">
               <form asp-action="Create">
                   <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                   <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Type the student name"/>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group" id="bd">
                        <label asp-for="Birthday" class="control-label"></label>
                        <input asp-for="Birthday" class="form-control"/>
                        <span asp-validation-for="Birthday" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <label asp-for="Grade" class="control-label"></label>
                        <select asp-for="Grade" class="form-control"  placeholder="Select the student grade">
                            <option>1ST GRADE</option>
                            <option>2ND GRADE</option>
                            <option>3RD GRADE</option>
                            <option>4TH GRADE</option>
                            <option>5TH GRADE</option>
                            <option>6TH GRADE</option>
                        </select>
                        <span asp-validation-for="Grade" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="State" class="control-label"></label>
                        <select asp-for="State" class="form-control"  placeholder="Select the student state">
                            <option>ACTIVO</option>
                            <option>INACTIVO</option>
                        </select>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>


                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-success"><i class="bi bi-person-fill"></i> Create Student</button>
                        <a href="/home" class="btn btn-outline-danger"><i class="bi bi-x-square"></i> Cancel</a>
                   </div>
                   
               </form>
            </div>
        </div>
    </div>
</div>
