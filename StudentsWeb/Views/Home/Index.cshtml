@model IEnumerable<StudentsWeb.Models.Student>

@{
    ViewData["Title"] = "Home Page";
}

<h1 class="text-center">STUDENTS CRUD</h1>

<div class="row">

    <div class="col-12">
        <a asp-action="Create" asp-controller="Home" class="btn btn-success  mb-3"><i class="bi bi-person-plus" ></i> New Student</a>
    </div>

</div>

<div class="row">

    <div class="col-12">
        
        <div class="card border">
        
            <div class="card-header">
                <h3><strong>Students List</strong></h3>
            </div>

            <div class="card-body">
                <div class="table-responsive">
                    @if (Model.Count() > 0)
                    {
                        <table class="table table-bordered" id="tblStudent" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                   <th>@Html.DisplayNameFor(m => m.Name)</th>
                                   <th>@Html.DisplayNameFor(m => m.Birthday)</th>
                                   <th>@Html.DisplayNameFor(m => m.Grade)</th>
                                   <th>@Html.DisplayNameFor(m => m.State)</th>
                                   <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayNameFor(m => item.Name)</td>
                                        <td>@Html.DisplayNameFor(m => item.Birthday)</td>
                                        <td>@Html.DisplayNameFor(m => item.Grade)</td>
                                        <td>@Html.DisplayNameFor(m => item.State)</td>
                                        <td>
                                            <a class="btn btn-primary" asp-action="Edit" asp-route-id ="@item.Id"><i class="bi bi-pencil-fill"></i> Edite</a>
                                            <a class="btn btn-secondary" asp-action="Details" asp-route-id ="@item.Id"><i class="bi bi-info-circle-fill"></i> Details</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id ="@item.Id"><i class="bi bi-trash-fill"></i> Delete</a>
                                        </td>

                                    </tr>
                                    
                                }
                            </tbody>
                        </table>
                    }
                </div>
           </div>
        </div>
     </div>
</div>
@section Scripts{ 
    <script>

     $(document).ready( function () 
     {
          $('#tblStudent').DataTable();
     });
            
    </script>
    }